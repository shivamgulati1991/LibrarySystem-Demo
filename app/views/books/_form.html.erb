<%= form_for @book do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@book.errors.count, "error") %> errors occurred:</h4>
 
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <p>
    <%= f.label :ISBN %><br>
    <%= f.text_field :ISBN %>
  </p>
 
  <p>
    <%= f.label :Author %><br>
    <%= f.text_field :author %>
  </p>
   <p>
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </p>
   <p>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </p>
   <p>
    <%= f.label :Status %><br>
    <%#= f.text_field :status, :value => "Available" %> 
    <%= f.select :status, [['Available','Available'],['Checked Out','Checked Out']] %>
  </p>
  <p>
    <%= f.submit :"Save" %>
  </p>
<% end %>
