<h2>Update your profile</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, :url => {:action => "updaterole"} do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email,  :disabled=>true, class: 'form-control' %><br>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
